{
    "name": "industrialdev/wicket-wp-account-centre",
    "description": "Wicket's Account Centre for WordPress",
    "version": "1.6.11",
    "keywords": [
        "wordpress",
        "wicket",
        "account",
        "centre"
    ],
    "license": "GPL-2.0-or-later",
    "homepage": "https://wicket.io",
    "authors": [
        {
            "name": "Wicket Inc.",
            "homepage": "https://wicket.io"
        }
    ],
    "type": "wordpress-plugin",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:industrialdev/wicket-sdk-php.git",
            "no-api": true
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "industrialdev/wicket-sdk-php": "dev-master",
        "htmlburger/carbon-fields": "^3.6",
        "picocss/pico": "^2.1"
    },
    "require-dev": {
        "brain/monkey": "^2",
        "friendsofphp/php-cs-fixer": "^3",
        "pestphp/pest": "^4",
        "pestphp/pest-plugin-browser": "^4",
        "phpunit/phpunit": "^12"
    },
    "autoload": {
        "psr-4": {
            "WicketAcc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WicketAcc\\Tests\\": "tests/unit/"
        }
    },
    "scripts": {
        "production": "rm -rf vendor && composer install --no-dev --optimize-autoloader",
        "setup-hooks": "mkdir -p .git/hooks && cp .ci/pre-push .git/hooks/pre-push && chmod +x .git/hooks/pre-push && echo 'Git hooks installed to .git/hooks/pre-push'",
        "post-install-cmd": [
            "@cs:fix",
            "@build-pico-css"
        ],
        "post-update-cmd": [
            "@cs:fix",
            "@build-pico-css"
        ],
        "build-pico-css": "@php ./.ci/build-pico-css.php",
        "test": "pest",
        "test:unit": "pest --testsuite unit",
        "test:coverage": "pest --coverage-html coverage",
        "test:browser": "sh -lc 'if [ -f .env ]; then set -a; . ./.env; set +a; fi; : \"${WICKET_BROWSER_BASE_URL:=https://localhost}\"; export WICKET_BROWSER_BASE_URL; ./vendor/bin/pest --testsuite browser'",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "format": "php-cs-fixer fix",
        "check": [
            "@lint",
            "@test"
        ],
        "cs:fix": "php-cs-fixer fix",
        "post-autoload-dump": [
            "@build-pico-css"
        ],
        "version-bump": "echo 'Use wicket-cli-tools: wicket plugin version-bump'"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
    }
}
