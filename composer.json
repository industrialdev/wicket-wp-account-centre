{
    "name": "industrialdev/wicket-wp-account-centre",
    "description": "Wicket's Account Centre for WordPress",
    "version": "1.5.6",
    "keywords": [
        "wordpress",
        "wicket",
        "account",
        "centre"
    ],
    "license": "GPLv2 or later",
    "homepage": "https://wicket.io",
    "authors": [
        {
            "name": "Wicket Inc.",
            "homepage": "https://wicket.io"
        }
    ],
    "type": "wordpress-plugin",
    "require": {
        "php": ">=8.1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "twbs/bootstrap": "^5.3"
    },
    "scripts": {
        "post-install-cmd": [
            "chmod +x .ci/install-hooks.sh",
            "bash .ci/install-hooks.sh",
            "chmod +x .git/hooks/pre-commit",
            "if [ \"$COMPOSER_DEV_MODE\" = \"0\" ]; then rm -rf ./.ci; fi",
            "cp vendor/twbs/bootstrap/dist/css/bootstrap-grid.min.css assets/css/_bootstrap-grid.min.css"
        ],
        "post-update-cmd": [
            "chmod +x .ci/install-hooks.sh",
            "bash .ci/install-hooks.sh",
            "chmod +x .git/hooks/pre-commit",
            "if [ \"$COMPOSER_DEV_MODE\" = \"0\" ]; then rm -rf ./.ci; fi",
            "cp vendor/twbs/bootstrap/dist/css/bootstrap-grid.min.css assets/css/_bootstrap-grid.min.css"
        ],
        "version-bump": "read -p \"Enter new version (semver): \" NEW_VERSION; CURRENT_VERSION=$(grep -oP '(?<=\"version\": \")[^\"]*' composer.json); for file in composer.json README.txt class-wicket-acc-main.php; do sed -i \"s/$CURRENT_VERSION/$NEW_VERSION/g\" $file; done; echo \"Bumped from $CURRENT_VERSION to $NEW_VERSION\"; echo \"Version updated successfully!\""
    }
}
