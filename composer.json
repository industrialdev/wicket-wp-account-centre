{
    "name": "industrialdev/wicket-wp-account-centre",
    "description": "Wicket's Account Centre for WordPress",
    "version": "1.6.4",
    "keywords": [
        "wordpress",
        "wicket",
        "account",
        "centre"
    ],
    "license": "GPL-2.0-or-later",
    "homepage": "https://wicket.io",
    "authors": [
        {
            "name": "Wicket Inc.",
            "homepage": "https://wicket.io"
        }
    ],
    "type": "wordpress-plugin",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:industrialdev/wicket-sdk-php.git",
            "no-api": true
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "industrialdev/wicket-sdk-php": "dev-master",
        "htmlburger/carbon-fields": "^3.6",
        "picocss/pico": "^2.1"
    },
    "require-dev": {
        "brain/monkey": "^2",
        "friendsofphp/php-cs-fixer": "^3",
        "pestphp/pest": "^4",
        "pestphp/pest-plugin-browser": "^4",
        "phpunit/phpunit": "^12"
    },
    "autoload": {
        "psr-4": {
            "WicketAcc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WicketAcc\\Tests\\": "tests/unit/"
        }
    },
    "scripts": {
        "production": "composer dump-autoload --optimize --no-dev",
        "dump-autoload-prod": "@production",
        "post-install-cmd": [
            "@cs:fix",
            "@build-pico-css"
        ],
        "post-update-cmd": [
            "@cs:fix",
            "@build-pico-css"
        ],
        "version-bump": [
            "@php ./.ci/version-bump.php",
            "@cs:fix"
        ],
        "build-pico-css": "@php ./.ci/build-pico-css.php",
        "test": "pest",
        "test:unit": "pest --testsuite unit",
        "test:coverage": "pest --coverage-html coverage",
        "test:browser": "WICKET_BROWSER_BASE_URL=https://localhost ./vendor/bin/pest --testsuite browser",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "format": "php-cs-fixer fix",
        "check": [
            "@lint",
            "@test"
        ],
        "cs:fix": "php-cs-fixer fix",
        "post-autoload-dump": [
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
    }
}
